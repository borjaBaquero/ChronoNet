<Window
    x:Class="CL_CHRONO.Vista.Fichaje"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CL_CHRONO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Fichaje"
    Width="400"
    Height="400"
    Icon="/Resources/icon.ico"
    Loaded="Window_Loaded"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">

    <Window.Resources>
        <SolidColorBrush x:Key="BotonColorAzul" Color="#253439" />
        <SolidColorBrush x:Key="TextoBotonColorBlanco" Color="#FFFFFF" />

        <Style x:Key="EstiloBotonAceptar" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource BotonColorAzul}" />
            <Setter Property="Foreground" Value="{DynamicResource TextoBotonColorBlanco}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="26" />
            <!-- Ajuste del tamaño de la fuente para que no sea tan grande -->
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="0,0,0,0" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                    x:Name="btnBorder"
                    Background="{TemplateBinding Background}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8"
                    SnapsToDevicePixels="True">
                            <ContentPresenter
                        x:Name="ContentPresenter"
                        Margin="{TemplateBinding Padding}"
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                        Focusable="False"
                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#345A6E" />
                    <!-- Color más claro en hover -->
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="btnVolver" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/Resources/return.png" Width="45" Height="50" Stretch="Uniform" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <RotateTransform Angle="15"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <RotateTransform Angle="0"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>
        

        <Button
            x:Name="btnVerRegistros"
            Grid.Row="0"
            Width="255"
            Margin="0,0,0,0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Style="{DynamicResource EstiloBotonAceptar}"
            Content="MIS REGISTROS"
            Click="btnVerRegistros_Click"/>


        <Button
            x:Name="btnEntradaFichaje"
            Grid.Row="1"
            Width="255"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Click_btnEntradaFichaje"
            Content="ENTRADA"
            Style="{DynamicResource EstiloBotonAceptar}" />

        <Button
            x:Name="btnSalidaFichaje"
            Grid.Row="2"
            Width="255"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Click_btnSalidaFichaje"
            Content="SALIDA"
            Style="{DynamicResource EstiloBotonAceptar}" />

        <Button
            x:Name="btnPausaFichaje"
            Grid.Row="3"
            Width="255"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Click_btnPausar"
            Content="PAUSA"
            Style="{DynamicResource EstiloBotonAceptar}"
            Visibility="Visible" />

        <Button
            x:Name="btnReanudarFichaje"
            Grid.Row="3"
            Width="255"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Click_btnReanudar"
            Content="REANUDAR"
            Style="{DynamicResource EstiloBotonAceptar}"
            Visibility="Hidden" />

        <TextBlock
            x:Name="txtReloj"
            Grid.Row="6"
            Width="169"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#253439"
            FontSize="24"
            FontWeight="Bold"
            Foreground="White"
            TextAlignment="Center" />


        <Button
            x:Name="btnVolver"
            Grid.Row="0"
            HorizontalAlignment="Left"
            Width="50"
            Height="50"
            Margin="5,5,0,0"
            Click="CerrarApp_Click"
            Style="{DynamicResource btnVolver}">
        </Button>

        <TextBlock
            x:Name="txtSol"
            Grid.Row="5"
            Width="169"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="14"
            FontWeight="Bold"
            Foreground="#FF8C8C8C"
            Text="DNET-RRHH"
            TextAlignment="Center" />

    </Grid>
</Window>