		<UseWPF>true</UseWPF>
		<PlatformTarget>x86</PlatformTarget>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="Resources\bloqueado.png" />
		<None Remove="Resources\candado.png" />
		<None Remove="Resources\icon.ico" />
		<None Remove="Resources\LogoColor.png" />
		<None Remove="Resources\return.png" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="DK.WshRuntime" Version="4.1.3.201115164" />
		<PackageReference Include="EPPlus" Version="7.6.0" />
		<PackageReference Include="Extension.OfficeOpenXml" Version="1.1.0" />
		<PackageReference Include="Microsoft-WindowsAPICodePack-Shell" Version="1.1.5" />
		<PackageReference Include="Microsoft.AspNetCore.App" Version="2.2.8" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.3.0" />
		<PackageReference Include="Microsoft.Data.Sqlite" Version="9.0.2" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.2" />
		<PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="9.0.2" />
